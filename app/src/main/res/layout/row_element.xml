<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                xmlns:tools="http://schemas.android.com/tools">
	<ImageView
			android:id="@+id/image_in_row"
			android:layout_width="@dimen/height_item"
			android:layout_height="@dimen/height_item"
			android:layout_margin="@dimen/margin_min"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:scaleType="centerCrop"
			tools:src="@mipmap/ic_launcher"
			android:contentDescription="@string/image_of_cat"/>
	<TextView
			android:id="@+id/text_in_row"
			android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toEndOf="@id/image_in_row"
			android:layout_marginStart="@dimen/margin_min"
			android:textSize="@dimen/row_text_size"
			tools:text="Cute cat"/>
</RelativeLayout>